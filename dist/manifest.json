{
  "manifest_version": 2,

  "name": "WebReacher",
  "icons":
   {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },
  "description": "Chrome Extension for SSH use",
  "version": "3.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["css/global.css"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"],
    "persistent": true
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}